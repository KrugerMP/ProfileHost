@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="4500" style="padding-top:5px;">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/c-sharp1.jpg" alt="My First Language" class="img-responsive" style="width:100%; height:420px;" />
            <div class="carousel-caption" role="option">
                <p>
                    My very first language and the language i love working with..
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/programmingReason1.jpg" alt="Reason Why I Love Programming" class="img-responsive " style="width:100%; height:420px;"/>
            <div class="carousel-caption" role="option">
                <p>
                    Need a reason to love programming?
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-3">
        <h2 style="color:#CE9490;">What I Know?</h2>
        <ul style="color:white;">
            <li>C#</li>
            <li>ASP.NET</li>
            <li>Xamarin.Forms</li>
            <li>SQL</li>
            <li>Unity Game Development</li>
            <li>HTML, CSS3, JavaScript, Bootstrap and jQuery</li>
        </ul>
    </div>
    <div class="col-md-3">
        <h2 style="color:#CE9490;">What I Am Busy With?</h2>
        <ul style="color:white;">
            <li>Advance C# Programming</li>
            <li>Visual Basic</li>
            <li>Java Programming</li>
        </ul>
    </div>
    <div class="col-md-3">
        <h2 style="color:#CE9490;">What I Wish To Learn?</h2>
        <ul style="color:white;">
            <li>Angular</li>
            <li>React</li>
            <li>Assembly &amp; C++</li>
        </ul>
    </div>
    <div class="col-md-3">
        <h2 style="color:#CE9490;">My Dialy Goals?</h2>
        <ul style="color:white;">
            <li>Think better than yesteday's me</li>
            <li>Search ways to improve my programming</li>
            <li>Learn something new</li>
            <li>Drink a lot of coffee</li>
        </ul>
    </div>
</div>
